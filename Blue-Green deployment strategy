---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: abbas
spec:
  replicas: 4
  selector:
    matchLabels:
      app: swiggy
      env: blue
  template:
    metadata:
      name: new
      labels:
        app: swiggy
        env: blue
    spec:
      containers:
        - name: mycont
          image: shaikmustafa/dm
          ports:
            - containerPort: 80


---
