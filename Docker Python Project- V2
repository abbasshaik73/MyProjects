pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/abbasshaik73/python-code-library-app.git'
            }
        }
        stage('Code Quality Analysis') {
            steps {
                script {
                    def scannerHome = tool "mysonar"
                    withSonarQubeEnv("mysonar") {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                              -Dsonar.projectKey=my-project-key \
                              -Dsonar.projectName=MyProject \
                              -Dsonar.sources=.
                        """
                    }
                }
            }
        }
        stage ('Dockerfile') {
            steps {
                sh 'docker build -t authimage auth'
                sh 'docker build -t bookimage book'
                sh 'docker build -t borrowimage borrow'
                sh 'docker build -t dbimage database'
                sh 'docker build -t frontendimage .'
            }
        }
        stage ('Scan Image') {
            steps {
                sh 'trivy image authimage'
                sh 'trivy image bookimage'
                sh 'trivy image borrowimage'
                sh 'trivy image dbimage'
                sh 'trivy image frontendimage'
            }
        }
        stage ('Tag Image') {
            steps {
                sh 'docker tag authimage abbasshaik739/project2:authimage'
                sh 'docker tag bookimage abbasshaik739/project2:bookimage'
                sh 'docker tag borrowimage abbasshaik739/project2:borrowimage'
                sh 'docker tag dbimage abbasshaik739/project2:dbimage'
                sh 'docker tag frontendimage abbasshaik739/project2:frontendimage'
            }
        }
        stage ('Docker Push Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'e2954477-3107-4152-9a07-d01543131619') {
                        sh 'docker push abbasshaik739/project2:authimage'
                        sh 'docker push abbasshaik739/project2:bookimage'
                        sh 'docker push abbasshaik739/project2:borrowimage'
                        sh 'docker push abbasshaik739/project2:dbimage'
                        sh 'docker push abbasshaik739/project2:frontendimage'
                    }
                }
            }
        }
        stage ('Deploy to container') {
            steps {
                sh 'docker stack deploy flm -c compose.yml'
            }
        }
    }
    post {
        always {
            mail to: 'abbasshaik0908@gmail.com',
            subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} \n build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URL}"
        }
    }
}
