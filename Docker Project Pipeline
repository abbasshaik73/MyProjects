pipeline {
    agent {
        node {
            label 'docker'
        }
    }
    stages {
        stage ('code') {
            steps {
                git 'https://github.com/abbasshaik73/python-code-library-app.git'
            }
        }
        stage('Code Quality Analysis') {
            steps {
                script {
                    def scannerHome = tool "mysonar"
                    withSonarQubeEnv("mysonar") {
                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                              -Dsonar.projectKey=my-project-key \
                              -Dsonar.projectName=MyProject \
                              -Dsonar.sources=.
                        """
                    }
                }
            }
        }
        stage ('Docker image') {
            steps {
                sh 'docker build -t authimage auth'
                sh 'docker build -t databaseimage database'
                sh 'docker build -t borrowimage borrow'
                sh 'docker build -t bookimage book'
                sh 'docker build -t appimage .'
            }
        }
        stage ('Scan Image') {
            steps {
                sh 'trivy image authimage'
                sh 'trivy image bookimage'
                sh 'trivy image borrowimage'
                sh 'trivy image databaseimage'
                sh 'trivy image appimage'
            }
        }
        stage ('Tag Image') {
            steps {
                sh 'docker tag authimage abbasshaik739/project1:authimage'
                sh 'docker tag bookimage abbasshaik739/project1:bookimage'
                sh 'docker tag borrowimage abbasshaik739/project1:borrowimage'
                sh 'docker tag databaseimage abbasshaik739/project1:databaseimage'
                sh 'docker tag appimage abbasshaik739/project1:appimage'
            }
        }
        stage ('Push Image') {
            steps {
                script {
                    withDockerRegistry(credentialsId: '37cfba7a-4e2f-4a43-81f9-473562d987bf') {
                        sh 'docker push abbasshaik739/project1:authimage'
                        sh 'docker push abbasshaik739/project1:bookimage'
                        sh 'docker push abbasshaik739/project1:borrowimage'
                        sh 'docker push abbasshaik739/project1:databaseimage'
                        sh 'docker push abbasshaik739/project1:appimage'
                    }
                }
            }
        }
        stage ('Deploy') {
            steps {
                sh 'docker stack deploy flm -c compose.yml'
            }
        }
    }
    post {
        always {
            mail to: 'abbasshaik0908@gmail.com',
            subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: "*${currentBuild.currentResult}:* Job ${env.JOB_NAME} \n build ${env.BUILD_NUMBER} \n More info at: ${env.BUILD_URL}"
        }
    }
}
